# Server Configuration
PORT=5000

# Database Configuration
MONGODB_URI=mongodb+srv://YOUR_USERNAME:YOUR_PASSWORD@YOUR_CLUSTER.mongodb.net/YOUR_DATABASE_NAME?retryWrites=true&w=majority&appName=YOUR_APP_NAME

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here

# Environment
NODE_ENV=development

# Email Configuration (for assignment notifications)
# IMPORTANT: EMAIL_PASS must be a Gmail App Password, not your regular password
# To get an App Password: Google Account > Security > 2-Step Verification > App passwords
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_gmail_app_password

# Frontend URL
FRONTEND_URL=http://localhost:3000